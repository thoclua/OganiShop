@model CustomUser
 <div class="modal-dialog" role="document">
    <form class="modal-content" action="/User/doUpdate" method="POST">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <div class="" >
           <div class="form-group row">
               <input type="text" name="Id" value="@Model.Id" style="display:none"/>
               <label class="col-sm-2 col-form-label" for="user-fullname">FullName:</label>
               <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="User FullName" name="FullName" value="@Model.FullName" />
               </div>
               
           </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="user-phone">PhoneNumber:</label>
                    <div class="col-sm-10">
                    <input type="number" class="form-control" placeholder="User PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" />
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="user-email">Eamil:</label>
                    <div class="col-sm-10">
                    <input type="email" class="form-control" placeholder="User Email" name="Email" value="@Model.Email" />
                    </div>
                </div>
       </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </form>
  </div>